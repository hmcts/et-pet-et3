<% content_for :head do %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :page_title do %>
  Sorry, the service is unavailable – Employment Tribunals – GOV.UK
<% end %>
<% content_for :inside_header do %>
  <div class="header-proposition">
    <div class="content">
      <%= link_to('Employment Tribunals', 'https://www.employmenttribunals.service.gov.uk/', {id: 'proposition-name'}) %>
    </div>
  </div>
<% end %>


<% content_for :content do %>
  <div id="content" class="direction-ltr">
    <main role="main">
      <div class="grid-row">
        <div class="column-full">
          <h1 class="heading-large">
            Sorry, the service is unavailable
          </h1>
          <% if Rails.application.config.maintenance_end.present? %>
            <p>You will be able to use the service
              from <%= Rails.application.config.maintenance_end %></p>
          <% else %>
            <p>You will be able to use the service later</p>
          <% end %>
          <p>Any responses in progress will have been saved.</p>
        </div>
      </div>
    </main>
  </div>
<% end %>

<% content_for :footer_support_links do %>
  <!-- No support links -->
<% end %>
<%= render template: "layouts/govuk_template" %>
